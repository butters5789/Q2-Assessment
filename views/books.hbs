<div class="row">
  <div class="col-md-2 sideNav">

    <div class="row">

      <div class="col-md-8">
        <a href="/authors">
          <img src="/images/python_in_a_nutshell.jpg" alt="Python In A Nutshell" />
          <h2 class="rotate">Authors</h2>
        </a>
      </div>

    </div>
    <div class="row">

      <div class="col-md-8">
        <a class="active" href="/books">
          <img src="/images/kyle_simpson.jpg" alt="Kyle Simpson" />
          <h2 class="rotate">Books</h2>
        </a>
      </div>

    </div>

  </div>
  <div class="col-md-10">

    <div class="row">
      <div class="col-md-12 text-right bookNav">
        <a href="/books/add"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>
      </div>
    </div>

    {{#each library}}
      <div class="row books">
        <div class="col-md-2">
          <img src="{{cover_url}}" alt="{{title}}" />
        </div>
        <div class="col-md-10">
          <div class="deleteButton">
            <a href="/books/delete/{{id}}"><span class="glyphicon glyphicon-remove-sign text-danger" aria-hidden="true"></span></a>
          </div>
          <h3>{{title}}</h3>
          <h4>{{first_name}} {{last_name}}</h4>
          <h5>{{genre}}</h5>
          <p>{{description}}</p>
        </div>
      </div>
    {{/each}}

  </div>
</div>
