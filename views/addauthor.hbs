<div class="row">
  <div class="col-md-2 sideNav">

    <div class="row">

      <div class="col-md-8">
        <a href="/authors">
          <img src="/images/kyle_simpson.jpg" alt="Kyle Simpson" />
          <h2 class="rotate">Authors</h2>
        </a>
      </div>

    </div>
    <div class="row">

      <div class="col-md-8">
        <a href="/books">
          <img src="/images/python_in_a_nutshell.jpg" alt="Python In A Nutshell" />
          <h2 class="rotate">Books</h2>
        </a>
      </div>

    </div>

  </div>
  <div class="col-md-offset-2 col-md-6">

    <div class="row">
      <div class="col-md-12 text-right bookNav">
        <a href="/authors"><span class="glyphicon glyphicon-remove-sign text-danger" aria-hidden="true"></span></a>
      </div>
    </div>

    <form action="/authors/add" method="post">
      <div class="form-group">
        <label for="first_name">Author First Name</label>
        <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name">
      </div>
      <div class="form-group">
        <label for="last_name">Author Last Name</label>
        <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name">
      </div>
      <div class="form-group">
        <label for="title">Book Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="portrait_url">Portrait URL</label>
        <input type="text" class="form-control" id="portrait_url" name="portrait_url" placeholder="Portrait URL">
      </div>
      <div class="form-group">
        <label for="biography">Biography</label>
        <textarea class="form-control" rows="3" id="biography" name="biography" placeholder="Biography"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Add Author</button>
    </form>

  </div>
</div>
