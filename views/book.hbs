<div class="row">
  <div class="col-md-2 sideNav">

    <div class="row">

      <div class="col-md-8">
        <a href="/authors">
          <img src="/images/python_in_a_nutshell.jpg" alt="Python In A Nutshell" />
          <h2 class="rotate">Authors</h2>
        </a>
      </div>

    </div>
    <div class="row">

      <div class="col-md-8">
        <a class="active" href="/books">
          <img src="/images/kyle_simpson.jpg" alt="Kyle Simpson" />
          <h2 class="rotate">Books</h2>
        </a>
      </div>

    </div>

  </div>
  <div class="col-md-10">

    <div class="row">
      <div class="col-md-12 text-right bookNav">
        <a href="/books"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span></a>
      </div>
    </div>

      <div class="row books">
        <div class="col-md-2">
          <img src="{{book.cover_url}}" alt="{{book.title}}" />
        </div>
        <div class="col-md-10">
          <div class="deleteButton">
            <a href="/books/delete/{{book.id}}"><span class="glyphicon glyphicon-remove-sign text-danger" aria-hidden="true"></span></a>
          </div>
          <h3>{{book.title}}</h3>
          {{#each authors}}
          <h4>Author: {{first_name}} {{last_name}}</h4>
          {{/each}}
          <h5>Genre: {{book.genre}}</h5>
          <p>{{book.description}}</p>
        </div>
      </div>

  </div>
</div>
