<div class="row">
  <div class="col-md-2 sideNav">

    <div class="row">

      <div class="col-md-8">
        <a href="/authors">
          <img src="/images/kyle_simpson.jpg" alt="Kyle Simpson" />
          <h2 class="rotate">Authors</h2>
        </a>
      </div>

    </div>
    <div class="row">

      <div class="col-md-8">
        <a href="/books">
          <img src="/images/python_in_a_nutshell.jpg" alt="Python In A Nutshell" />
          <h2 class="rotate">Books</h2>
        </a>
      </div>

    </div>

  </div>
  <div class="col-md-10">

    <div class="row">
      <div class="col-md-12 text-right bookNav">
        <a href="/authors"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span></a>
      </div>
    </div>

      <div class="row books">
        <div class="col-md-2">
          <img src="{{author.portrait_url}}" alt="{{author.title}}" />
        </div>
        <div class="col-md-10">
          <div class="deleteButton">
            <a href="/author/delete/{{author.id}}"><span class="glyphicon glyphicon-remove-sign text-danger" aria-hidden="true"></span></a>
          </div>
          <h3>{{author.first_name}} {{author.last_name}}</h3>
          <p>{{author.biography}}</p>
          {{#each books}}
          <h4>Title: <a href="/books/{{id}}">{{title}}</a></h4>
          {{/each}}
        </div>
      </div>

  </div>
</div>
