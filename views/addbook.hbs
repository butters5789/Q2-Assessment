<div class="row">
  <div class="col-md-2 sideNav">

    <div class="row">

      <div class="col-md-8">
        <a href="/authors">
          <img src="/images/kyle_simpson.jpg" alt="Kyle Simpson" />
          <h2 class="rotate">Authors</h2>
        </a>
      </div>

    </div>
    <div class="row">

      <div class="col-md-8">
        <a href="/books">
          <img src="/images/python_in_a_nutshell.jpg" alt="Python In A Nutshell" />
          <h2 class="rotate">Books</h2>
        </a>
      </div>

    </div>

  </div>
  <div class="col-md-offset-2 col-md-6">

    <div class="row">
      <div class="col-md-12 text-right bookNav">
        <a href="/books"><span class="glyphicon glyphicon-remove-sign text-danger" aria-hidden="true"></span></a>
      </div>
    </div>

    <form action="/books/add" method="post">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="first_name">Author First Name</label>
        <input type="text" class="form-control" id="first_name" name="first_name" placeholder="Author">
      </div>
      <div class="form-group">
        <label for="last_name">Author Last Name</label>
        <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Author">
      </div>
      <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" class="form-control" id="genre" name="genre" placeholder="Author">
      </div>
      <div class="form-group">
        <label for="cover_url">Cover URL</label>
        <input type="text" class="form-control" id="cover_url" name="cover_url" placeholder="Cover URL">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" rows="3" id="description" name="description" placeholder="Description"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Add Book</button>
    </form>

  </div>
</div>
